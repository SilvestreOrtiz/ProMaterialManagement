@model ClientePrueba.CUsuarios.Usuario
@{
    ViewBag.Title = "Edit";
}
<section>
    <div id="wrapperBanner">
        <div class="background">
            <div class="banner">
                <img src="~/Content/Banner1.png" />
            </div>
        </div>
        <div class="raya"></div>
        <div class="slogan">
            <h2>Editar Usuario</h2>
            <P>Edite el usuario!!</P>
            <img src="~/Content/edge-candy.svg" />
        </div>
    </div>
</section>
<div class="Formulario">
    <div class="Formulario2">
        @using (Html.BeginForm("Edit","Usuarios"))
        {
            @Html.AntiForgeryToken()
            <h4>Usuario</h4>
            <div class="form-horizontal">

                <hr />
                @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                <div class="form-group">
                    @Html.LabelFor(model => model.Nombre, htmlAttributes: new { @class = "LabelEstilo" })
                    <div class="col-md-10">
                        @Html.EditorFor(model => model.Nombre, new { htmlAttributes = new { @class = "BotonEstilo" } })
                        @Html.ValidationMessageFor(model => model.Nombre, "", new { @class = "text-danger" })
                    </div>
                </div>
            </div>
                @Html.HiddenFor(model => model.Email)
                @Html.HiddenFor(model => model.Id)
                @Html.HiddenFor(model => model.Password)
                @Html.HiddenFor(model => model.Clave)


                <div class="form-group">
                    @Html.LabelFor(model => model.Telefono, htmlAttributes: new { @class = "LabelEstilo" })
                    <div class="col-md-10">
                        @Html.EditorFor(model => model.Telefono, new { htmlAttributes = new { @class = "BotonEstilo" } })
                        @Html.ValidationMessageFor(model => model.Telefono, "", new { @class = "text-danger" })
                    </div>
                </div>
                
               
                <div class="form-group">
                    <div class="col-md-offset-2 col-md-10">
                        <input type="submit" value="Save" class="btn btn-default" />
                    </div>
                </div>
            
        }
            <div>
                @Html.ActionLink("Back to List", "Index")
            </div>
        </div>
        </div>