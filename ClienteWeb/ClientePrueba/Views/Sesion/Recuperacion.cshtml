@model ClientePrueba.CUsuarios.Usuario
@{
    ViewBag.Title = "Recuperacion";
}
<section>
    <div id="wrapperBanner">
        <div class="background">
            <div class="banner">
                <img src="~/Content/Banner1.png" />
            </div>
        </div>
        <div class="raya"></div>
        <div class="slogan">
            <h2>Recuperar mi contraseña</h2>
            <P>Recuperar!!</P>
            <img src="~/Content/edge-candy.svg" />
        </div>
    </div>
</section>
<h2>Ingrese su nueva contraseña</h2>
@using (Html.BeginForm("cambiarPass", "Sesion"))
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal">
        <h4>Usuario</h4>
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })

        @Html.HiddenFor(model => model.Id)
        <div class="form-group">
            @Html.LabelFor(model => model.Password, htmlAttributes: new { @class = "LabelEstilo" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.Password, new { htmlAttributes = new { @class = "BotonEstilo", @required = true } })
                @Html.ValidationMessageFor(model => model.Password, "", new { @class = "text-danger" })
            </div>
        </div>
        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Save" class="btn btn-default" />
            </div>
        </div>
    </div>
}
<div>
    @Html.ActionLink("Back to List", "Index")
</div>
